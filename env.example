# Email / SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=Chrononinja Profiles <profiles@chrono.ninja>
RESEND_API_KEY=

# Public app URL used in email links
PUBLIC_APP_URL=http://localhost:3000
# Настройки сервера
PORT=3001
HOST=localhost
NODE_ENV=development

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chrononinja
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Настройки JWT (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ В ПРОДАКШЕНЕ!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Настройки CORS
# CORS origins: comma-separated list, supports exact origins, bare domains and wildcards
# Examples:
# CORS_ORIGINS=https://chrono.ninja,https://www.chrono.ninja,http://localhost:3000
# CORS_ORIGINS=chrono.ninja,*.chrono.ninja,http://localhost:3000
CORS_ORIGINS=*

# Настройки безопасности
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Параметры источника/цели для миграций/тестов БД (опционально)
# Если не заданы, используются основные DB_* значения
# SRC_DB_HOST=
# SRC_DB_PORT=5432
# SRC_DB_NAME=
# SRC_DB_USER=
# SRC_DB_PASSWORD=
# SRC_DB_SSL=false
# TGT_DB_HOST=
# TGT_DB_PORT=5432
# TGT_DB_NAME=
# TGT_DB_USER=
# TGT_DB_PASSWORD=
# TGT_DB_SSL=false

# Настройки email (опционально, для будущего использования)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# Настройки Telegram бота для уведомлений (опционально)
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_CHAT_ID= 