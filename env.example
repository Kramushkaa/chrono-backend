# Email / SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=Chrononinja Profiles <profiles@chrono.ninja>
RESEND_API_KEY=

# Public app URL used in email links
PUBLIC_APP_URL=http://localhost:3000
# Настройки сервера
PORT=3001
HOST=localhost
NODE_ENV=development

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chrononinja
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# Настройки JWT (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ В ПРОДАКШЕНЕ!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Настройки CORS
CORS_ORIGIN=*

# Настройки безопасности
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Настройки email (опционально, для будущего использования)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password 