{
  "name": "chrononinja-backend",
  "version": "1.0.0",
  "description": "Backend API for Хронониндзя - Interactive timeline of historical figures",
  "main": "src/server.ts",
  "scripts": {
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start:prod": "node dist/server.js",
    "seed": "tsx src/db/seed.ts",
    "migrate": "tsx src/db/migrate.ts",
    "init-auth": "tsx src/db/init-auth.ts",
    "reset-admin": "tsx src/db/reset-admin-password.ts",
    "test-db": "tsx src/db/test-connection.ts",
    "db:schema": "tsx src/db/introspect.ts",
    "db:fix": "tsx src/db/fix-inconsistencies.ts",
    "migrate:add-wiki": "tsx src/db/migrate-add-wiki-link.ts",
    "views:update-wiki": "tsx src/db/update-views-add-wiki.ts",
    "init-test-schema": "tsx src/db/init-test-schema.ts",
    "seed:test": "tsx seed-test-db.js",
    "dev:test": "cross-env DB_SCHEMA=test tsx watch src/server.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:e2e": "eslint e2e --ext .ts",
    "lint:e2e:fix": "eslint e2e --ext .ts --fix",
    "lint:all": "eslint src e2e --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "format:e2e": "prettier --write \"e2e/**/*.ts\"",
    "format:e2e:check": "prettier --check \"e2e/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "type-check:e2e": "tsc --noEmit --project tsconfig.json",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "check:e2e": "npm run type-check:e2e && npm run lint:e2e && npm run format:e2e:check",
    "fix": "npm run lint:fix && npm run format",
    "fix:e2e": "npm run lint:e2e:fix && npm run format:e2e",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:a11y": "playwright test --grep @accessibility",
    "test:e2e:visual": "playwright test --grep @visual"
  },
  "keywords": [
    "timeline",
    "history",
    "api",
    "postgresql",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@chrononinja/dto": "file:./shared-dto",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "telegraf": "^4.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.56.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "form-data": "^2.5.4",
    "tough-cookie": "^4.1.4",
    "request": "^2.88.2"
  }
}
