{
  "name": "chrononinja-backend",
  "version": "1.0.0",
  "description": "Backend API for Хронониндзя - Interactive timeline of historical figures",
  "main": "src/server.ts",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start:prod": "node dist/server.js",
    "seed": "ts-node src/db/seed.ts",
    "migrate": "ts-node src/db/migrate.ts",
    "init-auth": "ts-node src/db/init-auth.ts",
    "init-achievements": "echo 'init-achievements removed'",
    "init-countries": "echo 'init-countries removed'",
    "init-periods": "echo 'init-periods removed'",
    "migrate:periods": "echo 'migrate:periods removed'",
    "migrate:life-periods": "echo 'migrate:life-periods removed'",
    "init-views": "echo 'init-views deprecated'",
    "drop-legacy-persons": "echo 'drop-legacy-persons removed'",
    "drop-legacy-achievements": "echo 'drop-legacy-achievements removed'",
    "migrate:achievements": "echo 'migrate:achievements removed'",
    "reset-admin": "ts-node src/db/reset-admin-password.ts",
    "quick-check": "echo 'quick-check removed'",
    "quick-login": "echo 'quick-login removed'",
    "quick-verify-admin": "echo 'quick-verify-admin removed'",
    "test-db": "ts-node src/db/test-connection.ts",
    "email:test": "ts-node src/utils/send-test-email.ts",
    "db:schema": "ts-node src/db/introspect.ts",
    "db:fix": "ts-node src/db/fix-inconsistencies.ts",
    "migrate:add-wiki": "ts-node src/db/migrate-add-wiki-link.ts",
    "views:update-wiki": "ts-node src/db/update-views-add-wiki.ts",
    "migrate:moderation": "ts-node src/db/migrate-moderation-periods-achievements.ts",
    "migrate:achievements-only": "ts-node src/db/migrate-moderation-periods-achievements.ts --achievements-only",
    "migrate:check": "ts-node src/db/migrate-moderation-periods-achievements.ts --check-only",
    "telegram:test": "ts-node src/utils/test-telegram.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "timeline",
    "history",
    "api",
    "postgresql",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@chrononinja/dto": "file:./shared-dto",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "helmet": "^6.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-telegram-bot-api": "^0.66.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.11.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/node-telegram-bot-api": "^0.64.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
